<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Usuario.pantallaUsuario">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.20109439" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />
    <ImageView
        android:id="@+id/back_btn2"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/baseline_chevron_left_242"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.422" />


    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="40dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/buttonEditar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.66"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        tools:ignore="MissingConstraints">

        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:ems="4"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text="@string/Nombre"
                android:textColor="@color/azul"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/a単adirNombre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:ems="4"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text="@string/Nombre"
                android:textColor="@color/azul"
                android:textSize="14dp"
                android:textStyle="bold" />


        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ems="4"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text="@string/Apellidos"
                android:textColor="@color/azul"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/a単adirApellidos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ems="4"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text="@string/Apellidos"
                android:textColor="@color/azul"
                android:textSize="14dp"
                android:textStyle="bold" />


        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ems="4"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text="@string/Nacionalidad"
                android:textColor="@color/azul"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/a単adirNacionalidad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ems="4"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text="@string/Nacionalidad"
                android:textColor="@color/azul"
                android:textSize="14dp"
                android:textStyle="bold" />


        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ems="4"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text="@string/FvFabricante"
                android:textColor="@color/azul"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/a単adirFabricante"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ems="4"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text="@string/FvFabricante"
                android:textColor="@color/azul"
                android:textSize="14dp"
                android:textStyle="bold" />


        </TableRow>

    </TableLayout>


    <Button
        android:id="@+id/buttonEditar"
        android:layout_width="218dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/azul"
        android:text="@string/Editar"
        app:layout_constraintBottom_toTopOf="@+id/banner_colecciones"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/gris"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/banner_colecciones"
        android:layout_width="410dp"
        android:layout_height="139dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/banner_mis_colecciones"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline3" />

    <ImageView
        android:id="@+id/banner_coches"
        android:layout_width="410dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:src="@drawable/banner_coches"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline4"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>